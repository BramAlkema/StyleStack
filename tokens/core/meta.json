{
  "$schema": "https://stylestack.dev/schemas/design-tokens.schema.json",
  "system": {
    "version": {
      "value": "2026.1.0",
      "type": "string",
      "description": "StyleStack core token version",
      "$extensions": {
        "stylestack": {
          "category": "primitive"
        }
      }
    },
    "baseline": {
      "grid": {
        "value": "18pt",
        "type": "dimension",
        "description": "Core baseline grid unit",
        "$extensions": {
          "stylestack": {
            "emu": 228600,
            "category": "primitive"
          }
        }
      },
      "micro": {
        "value": "3pt",
        "type": "dimension",
        "description": "Micro adjustment unit (1/6 baseline)",
        "$extensions": {
          "stylestack": {
            "emu": 38100,
            "category": "primitive"
          }
        }
      }
    }
  },
  "ooxml": {
    "emu": {
      "per": {
        "point": {
          "value": 12700,
          "type": "number",
          "description": "EMUs per point for OOXML conversion",
          "$extensions": {
            "stylestack": {
              "category": "primitive"
            }
          }
        },
        "inch": {
          "value": 914400,
          "type": "number",
          "description": "EMUs per inch for OOXML positioning",
          "$extensions": {
            "stylestack": {
              "category": "primitive"
            }
          }
        }
      }
    }
  },
  "design": {
    "accessibility": {
      "wcag": {
        "level": {
          "value": "AAA",
          "type": "string",
          "description": "Target WCAG compliance level",
          "$extensions": {
            "stylestack": {
              "category": "primitive"
            }
          }
        },
        "contrast": {
          "minimum": {
            "value": 7.0,
            "type": "number",
            "description": "Minimum contrast ratio for text",
            "$extensions": {
              "stylestack": {
                "category": "primitive"
              }
            }
          }
        }
      }
    },
    "quality": {
      "standards": {
        "typography": {
          "kerning": {
            "threshold": {
              "value": "8pt",
              "type": "dimension",
              "description": "Minimum font size for auto-kerning",
              "$extensions": {
                "stylestack": {
                  "emu": 101600,
                  "category": "primitive"
                }
              }
            }
          }
        },
        "effects": {
          "shadow": {
            "max": {
              "offset": {
                "value": "4pt",
                "type": "dimension",
                "description": "Maximum shadow offset for professional look",
                "$extensions": {
                  "stylestack": {
                    "emu": 50800,
                    "category": "primitive"
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "animation": {
    "duration": {
      "fast": {
        "value": "150ms",
        "type": "duration",
        "description": "Fast transition duration",
        "$extensions": {
          "stylestack": {
            "category": "primitive"
          }
        }
      },
      "normal": {
        "value": "300ms",
        "type": "duration",
        "description": "Standard transition duration",
        "$extensions": {
          "stylestack": {
            "category": "primitive"
          }
        }
      },
      "slow": {
        "value": "500ms",
        "type": "duration",
        "description": "Slow transition duration",
        "$extensions": {
          "stylestack": {
            "category": "primitive"
          }
        }
      }
    },
    "easing": {
      "ease": {
        "in": {
          "out": {
            "value": "cubic-bezier(0.42, 0, 0.58, 1)",
            "type": "cubicBezier",
            "description": "Ease-in-out timing function",
            "$extensions": {
              "stylestack": {
                "category": "primitive"
              }
            }
          }
        }
      }
    }
  },
  "shadows": {
    "subtle": {
      "value": {
        "color": "rgba(0, 0, 0, 0.05)",
        "offsetX": "0",
        "offsetY": "1pt",
        "blur": "2pt",
        "spread": "0"
      },
      "type": "shadow",
      "description": "Subtle shadow for cards and panels",
      "$extensions": {
        "stylestack": {
          "category": "primitive"
        }
      }
    },
    "soft": {
      "value": {
        "color": "rgba(0, 0, 0, 0.10)",
        "offsetX": "0",
        "offsetY": "2pt",
        "blur": "4pt",
        "spread": "0"
      },
      "type": "shadow",
      "description": "Soft shadow for elevated elements",
      "$extensions": {
        "stylestack": {
          "category": "primitive"
        }
      }
    },
    "medium": {
      "value": {
        "color": "rgba(0, 0, 0, 0.15)",
        "offsetX": "0",
        "offsetY": "4pt",
        "blur": "8pt",
        "spread": "-1pt"
      },
      "type": "shadow",
      "description": "Medium shadow for modals and dropdowns",
      "$extensions": {
        "stylestack": {
          "category": "primitive"
        }
      }
    }
  },
  "radius": {
    "none": {
      "value": "0",
      "type": "dimension",
      "description": "No border radius",
      "$extensions": {
        "stylestack": {
          "category": "primitive"
        }
      }
    },
    "sm": {
      "value": "2pt",
      "type": "dimension",
      "description": "Small border radius",
      "$extensions": {
        "stylestack": {
          "emu": 25400,
          "category": "primitive"
        }
      }
    },
    "md": {
      "value": "4pt",
      "type": "dimension",
      "description": "Medium border radius",
      "$extensions": {
        "stylestack": {
          "emu": 50800,
          "category": "primitive"
        }
      }
    },
    "lg": {
      "value": "6pt",
      "type": "dimension",
      "description": "Large border radius",
      "$extensions": {
        "stylestack": {
          "emu": 76200,
          "category": "primitive"
        }
      }
    },
    "xl": {
      "value": "8pt",
      "type": "dimension",
      "description": "Extra large border radius",
      "$extensions": {
        "stylestack": {
          "emu": 101600,
          "category": "primitive"
        }
      }
    },
    "full": {
      "value": "999pt",
      "type": "dimension",
      "description": "Full border radius (circular)",
      "$extensions": {
        "stylestack": {
          "category": "primitive"
        }
      }
    }
  },
  "zIndex": {
    "dropdown": {
      "value": 1000,
      "type": "number",
      "description": "Z-index for dropdown menus",
      "$extensions": {
        "stylestack": {
          "category": "primitive"
        }
      }
    },
    "sticky": {
      "value": 1020,
      "type": "number",
      "description": "Z-index for sticky elements",
      "$extensions": {
        "stylestack": {
          "category": "primitive"
        }
      }
    },
    "modal": {
      "value": 1050,
      "type": "number",
      "description": "Z-index for modal overlays",
      "$extensions": {
        "stylestack": {
          "category": "primitive"
        }
      }
    },
    "tooltip": {
      "value": 1070,
      "type": "number",
      "description": "Z-index for tooltips",
      "$extensions": {
        "stylestack": {
          "category": "primitive"
        }
      }
    }
  },
  "semantic": {
    "brand": {
      "name": {
        "value": "StyleStack",
        "type": "string",
        "description": "Brand name for templates",
        "$extensions": {
          "stylestack": {
            "category": "semantic"
          }
        }
      }
    },
    "template": {
      "identifier": {
        "prefix": {
          "value": "SS_",
          "type": "string",
          "description": "Prefix for template custom properties",
          "$extensions": {
            "stylestack": {
              "category": "semantic"
            }
          }
        }
      }
    }
  }
}