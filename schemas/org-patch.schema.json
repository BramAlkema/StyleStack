{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://stylestack.dev/schemas/org-patch.schema.json", 
  "title": "StyleStack Organization Patch Schema",
  "description": "Schema for organization-level design token overrides and OOXML patches",
  "version": "2.0.0",
  "type": "object",
  "properties": {
    "$schema": {
      "type": "string",
      "format": "uri",
      "description": "Reference to this JSON schema"
    },
    "metadata": {
      "type": "object",
      "required": ["organization", "version"],
      "properties": {
        "organization": {
          "type": "string",
          "pattern": "^[a-zA-Z][a-zA-Z0-9_-]*$",
          "description": "Organization identifier"
        },
        "display_name": {
          "type": "string",
          "description": "Human-readable organization name"
        },
        "description": {
          "type": "string", 
          "description": "Description of the organization patch"
        },
        "version": {
          "type": "string",
          "pattern": "^\\d+\\.\\d+\\.\\d+$",
          "description": "Semantic version number"
        },
        "author": {
          "type": "string",
          "description": "Patch author"
        },
        "created": {
          "type": "string",
          "format": "date-time",
          "description": "Creation timestamp"
        },
        "updated": {
          "type": "string", 
          "format": "date-time",
          "description": "Last update timestamp"
        },
        "license": {
          "type": "string",
          "description": "License for the patches"
        }
      },
      "additionalProperties": false
    },
    "target_formats": {
      "type": "array",
      "items": {
        "type": "string",
        "enum": ["potx", "dotx", "xltx", "pptx", "docx", "xlsx", "otp", "ott", "ots"]
      },
      "description": "Target Office template formats"
    },
    "overrides": {
      "type": "object",
      "description": "Design token overrides following design tokens schema",
      "properties": {
        "colors": {
          "$ref": "design-tokens.schema.json#/definitions/tokenGroup"
        },
        "typography": {
          "$ref": "design-tokens.schema.json#/definitions/tokenGroup"
        },
        "spacing": {
          "$ref": "design-tokens.schema.json#/definitions/tokenGroup"
        },
        "layout": {
          "$ref": "design-tokens.schema.json#/definitions/tokenGroup"
        },
        "components": {
          "$ref": "design-tokens.schema.json#/definitions/tokenGroup"
        }
      },
      "additionalProperties": {
        "$ref": "design-tokens.schema.json#/definitions/tokenGroup"
      }
    },
    "variables": {
      "type": "object",
      "patternProperties": {
        "^[a-zA-Z][a-zA-Z0-9_]*$": {
          "type": "string"
        }
      },
      "description": "Organization-specific variables for token substitution"
    },
    "patches": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/patch"
      },
      "description": "Array of OOXML patches to apply"
    },
    "assets": {
      "type": "object",
      "properties": {
        "logos": {
          "type": "object",
          "patternProperties": {
            "^[a-zA-Z][a-zA-Z0-9_-]*$": {
              "$ref": "#/definitions/asset"
            }
          }
        },
        "images": {
          "type": "object",
          "patternProperties": {
            "^[a-zA-Z][a-zA-Z0-9_-]*$": {
              "$ref": "#/definitions/asset"
            }
          }
        },
        "fonts": {
          "type": "object",
          "patternProperties": {
            "^[a-zA-Z][a-zA-Z0-9_-]*$": {
              "$ref": "#/definitions/asset"
            }
          }
        }
      },
      "additionalProperties": false,
      "description": "Organization assets (logos, fonts, etc.)"
    }
  },
  "required": ["metadata"],
  "additionalProperties": false,
  "definitions": {
    "patch": {
      "type": "object",
      "required": ["operation", "target", "value"],
      "properties": {
        "operation": {
          "type": "string",
          "enum": ["set", "insert", "remove", "replace"],
          "description": "Type of OOXML operation"
        },
        "target": {
          "type": "string",
          "description": "XPath expression targeting OOXML element/attribute"
        },
        "value": {
          "type": "string",
          "description": "Value for the operation (supports token variables)"
        },
        "condition": {
          "type": "string",
          "description": "Optional condition for applying the patch"
        },
        "file": {
          "type": "string",
          "description": "Specific OOXML file to target (optional)"
        },
        "description": {
          "type": "string",
          "description": "Human-readable description of the patch"
        }
      },
      "additionalProperties": false
    },
    "asset": {
      "type": "object",
      "required": ["type", "source"],
      "properties": {
        "type": {
          "type": "string",
          "enum": ["image", "font", "logo", "icon"],
          "description": "Type of asset"
        },
        "source": {
          "type": "string",
          "description": "Source URL or path to the asset"
        },
        "format": {
          "type": "string",
          "enum": ["png", "jpg", "svg", "gif", "ttf", "otf", "woff", "woff2"],
          "description": "Asset file format"
        },
        "dimensions": {
          "type": "object",
          "properties": {
            "width": {
              "type": "number",
              "description": "Asset width in pixels"
            },
            "height": {
              "type": "number", 
              "description": "Asset height in pixels"
            }
          },
          "additionalProperties": false
        },
        "alt_text": {
          "type": "string",
          "description": "Alternative text for accessibility"
        },
        "license": {
          "type": "string",
          "description": "Asset license information"
        }
      },
      "additionalProperties": false
    }
  }
}