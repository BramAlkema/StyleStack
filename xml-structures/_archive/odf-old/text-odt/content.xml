<?xml version="1.0" encoding="UTF-8"?>
<office:document-content xmlns:office="urn:oasis:names:tc:opendocument:xmlns:office:1.0"
                        xmlns:style="urn:oasis:names:tc:opendocument:xmlns:style:1.0"
                        xmlns:text="urn:oasis:names:tc:opendocument:xmlns:text:1.0"
                        xmlns:table="urn:oasis:names:tc:opendocument:xmlns:table:1.0"
                        xmlns:draw="urn:oasis:names:tc:opendocument:xmlns:drawing:1.0"
                        xmlns:fo="urn:oasis:names:tc:opendocument:xmlns:xsl-fo-compatible:1.0"
                        xmlns:xlink="http://www.w3.org/1999/xlink"
                        xmlns:dc="http://purl.org/dc/elements/1.1/"
                        xmlns:meta="urn:oasis:names:tc:opendocument:xmlns:meta:1.0"
                        xmlns:number="urn:oasis:names:tc:opendocument:xmlns:datastyle:1.0"
                        xmlns:svg="urn:oasis:names:tc:opendocument:xmlns:svg-compatible:1.0"
                        xmlns:chart="urn:oasis:names:tc:opendocument:xmlns:chart:1.0"
                        xmlns:dr3d="urn:oasis:names:tc:opendocument:xmlns:dr3d:1.0"
                        xmlns:math="http://www.w3.org/1998/Math/MathML"
                        xmlns:form="urn:oasis:names:tc:opendocument:xmlns:form:1.0"
                        xmlns:script="urn:oasis:names:tc:opendocument:xmlns:script:1.0"
                        xmlns:ooo="http://openoffice.org/2004/office"
                        xmlns:ooow="http://openoffice.org/2004/writer"
                        xmlns:oooc="http://openoffice.org/2004/calc"
                        xmlns:dom="http://www.w3.org/2001/xml-events"
                        xmlns:xforms="http://www.w3.org/2002/xforms"
                        xmlns:xsd="http://www.w3.org/2001/XMLSchema"
                        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                        xmlns:rpt="http://openoffice.org/2005/report"
                        xmlns:of="urn:oasis:names:tc:opendocument:xmlns:of:1.2"
                        xmlns:xhtml="http://www.w3.org/1999/xhtml"
                        xmlns:grddl="http://www.w3.org/2003/g/data-view#"
                        xmlns:officeooo="http://openoffice.org/2009/office"
                        xmlns:tableooo="http://openoffice.org/2009/table"
                        xmlns:drawooo="http://openoffice.org/2010/draw"
                        xmlns:calcext="urn:org:documentfoundation:names:experimental:calc:xmlns:calcext:1.0"
                        xmlns:loext="urn:org:documentfoundation:names:experimental:office:xmlns:loext:1.0"
                        xmlns:field="urn:openoffice:names:experimental:ooo-ms-interop:xmlns:field:1.0"
                        xmlns:formx="urn:openoffice:names:experimental:ooxml-odf-interop:xmlns:form:1.0"
                        xmlns:css3t="http://www.w3.org/TR/css3-text/"
                        office:version="1.3">

  <!-- StyleStack Modern Document Content with Design Token Integration -->

  <!-- Script definitions -->
  <office:scripts/>

  <!-- Font face declarations with StyleStack typography -->
  <office:font-face-decls>
    <style:font-face style:name="Inter" svg:font-family="{{typography.font.family|Inter}}" style:font-family-generic="swiss" style:font-pitch="variable"/>
    <style:font-face style:name="Inter1" svg:font-family="{{typography.font.family|Inter}}" style:font-family-generic="system" style:font-pitch="variable"/>
    <style:font-face style:name="Liberation Serif" svg:font-family="'Liberation Serif'" style:font-family-generic="roman" style:font-pitch="variable"/>
    <style:font-face style:name="Liberation Sans" svg:font-family="'Liberation Sans'" style:font-family-generic="swiss" style:font-pitch="variable"/>
    <style:font-face style:name="Source Han Serif SC" svg:font-family="'Source Han Serif SC'" style:font-family-generic="system" style:font-pitch="variable"/>
    <style:font-face style:name="Noto Serif CJK SC" svg:font-family="'Noto Serif CJK SC'" style:font-family-generic="system" style:font-pitch="variable"/>
  </office:font-face-decls>

  <!-- Automatic styles with design token variables -->
  <office:automatic-styles>
    <!-- Page layout with StyleStack margins and spacing -->
    <style:page-layout style:name="pm1">
      <style:page-layout-properties fo:page-width="{{layout.page.width|21cm}}" fo:page-height="{{layout.page.height|29.7cm}}"
                                   style:num-format="1" style:print-orientation="portrait"
                                   fo:margin-top="{{spacing.page.top|2.5cm}}" fo:margin-bottom="{{spacing.page.bottom|2cm}}"
                                   fo:margin-left="{{spacing.page.left|2cm}}" fo:margin-right="{{spacing.page.right|2cm}}"
                                   style:writing-mode="lr-tb" style:footnote-max-height="0cm">
        <style:footnote-sep style:width="0.018cm" style:distance-before-sep="0.101cm" style:distance-after-sep="0.101cm"
                           style:line-style="solid" style:adjustment="left" style:rel-width="25%" style:color="{{brand.colors.separator|#000000}}"/>
      </style:page-layout-properties>
      <!-- Header properties -->
      <style:header-style>
        <style:header-footer-properties fo:min-height="{{layout.header.height|0.75cm}}" fo:margin-left="0cm" fo:margin-right="0cm"
                                       fo:margin-bottom="{{spacing.header.bottom|0.25cm}}" style:dynamic-spacing="false"/>
      </style:header-style>
      <!-- Footer properties -->
      <style:footer-style>
        <style:header-footer-properties fo:min-height="{{layout.footer.height|0.75cm}}" fo:margin-left="0cm" fo:margin-right="0cm"
                                       fo:margin-top="{{spacing.footer.top|0.25cm}}" style:dynamic-spacing="false"/>
      </style:footer-style>
    </style:page-layout>

    <!-- Title paragraph style -->
    <style:style style:name="P1" style:family="paragraph" style:parent-style-name="Title">
      <style:paragraph-properties fo:text-align="center" style:justify-single-word="false"/>
      <style:text-properties fo:font-size="{{typography.sizes.title|24pt}}" fo:font-weight="bold"
                            style:font-size-asian="{{typography.sizes.title|24pt}}" style:font-weight-asian="bold"
                            style:font-size-complex="{{typography.sizes.title|24pt}}" style:font-weight-complex="bold"
                            fo:color="{{brand.colors.text.title|#1F2937}}"/>
    </style:style>

    <!-- Subtitle paragraph style -->
    <style:style style:name="P2" style:family="paragraph" style:parent-style-name="Subtitle">
      <style:paragraph-properties fo:text-align="center" style:justify-single-word="false"
                                 fo:margin-top="{{spacing.subtitle.top|0.5cm}}" fo:margin-bottom="{{spacing.subtitle.bottom|1cm}}"/>
      <style:text-properties fo:font-size="{{typography.sizes.subtitle|16pt}}" fo:font-style="italic"
                            style:font-size-asian="{{typography.sizes.subtitle|16pt}}" style:font-style-asian="italic"
                            style:font-size-complex="{{typography.sizes.subtitle|16pt}}" style:font-style-complex="italic"
                            fo:color="{{brand.colors.text.subtitle|#6B7280}}"/>
    </style:style>

    <!-- Body text paragraph style -->
    <style:style style:name="P3" style:family="paragraph" style:parent-style-name="Text_20_body">
      <style:paragraph-properties fo:margin-top="{{spacing.paragraph.top|0.3cm}}" fo:margin-bottom="{{spacing.paragraph.bottom|0.3cm}}"
                                 loext:contextual-spacing="false"/>
      <style:text-properties fo:font-size="{{typography.sizes.body|11pt}}"
                            style:font-size-asian="{{typography.sizes.body|11pt}}"
                            style:font-size-complex="{{typography.sizes.body|11pt}}"
                            fo:color="{{brand.colors.text.body|#374151}}"/>
    </style:style>

    <!-- Emphasis text style -->
    <style:style style:name="T1" style:family="text">
      <style:text-properties fo:font-weight="bold" fo:color="{{brand.colors.text.emphasis|#0EA5E9}}"
                            style:font-weight-asian="bold" style:font-weight-complex="bold"/>
    </style:style>

    <!-- Brand accent text style -->
    <style:style style:name="T2" style:family="text">
      <style:text-properties fo:color="{{brand.colors.primary|#0EA5E9}}" fo:font-weight="bold"/>
    </style:style>

    <!-- Frame style for brand elements -->
    <style:style style:name="fr1" style:family="graphic" style:parent-style-name="Frame">
      <style:graphic-properties style:vertical-pos="from-top" style:vertical-rel="page"
                               style:horizontal-pos="center" style:horizontal-rel="page"
                               style:mirror="none" fo:clip="rect(0cm, 0cm, 0cm, 0cm)"
                               draw:luminance="0%" draw:contrast="0%" draw:red="0%" draw:green="0%" draw:blue="0%"
                               draw:gamma="100%" draw:color-inversion="false" draw:image-opacity="100%"
                               draw:color-mode="standard"/>
    </style:style>

    <!-- Table style with brand colors -->
    <style:style style:name="Table1" style:family="table">
      <style:table-properties style:width="{{layout.table.width|16cm}}" table:align="center"
                             style:shadow="{{effects.table.shadow|none}}"/>
    </style:style>

    <!-- Table column styles -->
    <style:style style:name="Table1.A" style:family="table-column">
      <style:table-column-properties style:column-width="{{layout.table.column_a_width|4cm}}"/>
    </style:style>
    <style:style style:name="Table1.B" style:family="table-column">
      <style:table-column-properties style:column-width="{{layout.table.column_b_width|6cm}}"/>
    </style:style>
    <style:style style:name="Table1.C" style:family="table-column">
      <style:table-column-properties style:column-width="{{layout.table.column_c_width|6cm}}"/>
    </style:style>

    <!-- Table cell styles -->
    <style:style style:name="Table1.A1" style:family="table-cell">
      <style:table-cell-properties fo:padding="{{spacing.table.cell_padding|0.2cm}}" fo:border-left="none" fo:border-right="{{borders.table.vertical|0.05pt solid #E5E7EB}}"
                                  fo:border-top="{{borders.table.horizontal|0.05pt solid #E5E7EB}}" fo:border-bottom="{{borders.table.horizontal|0.05pt solid #E5E7EB}}"
                                  fo:background-color="{{brand.colors.table.header_bg|#F9FAFB}}"/>
      <style:paragraph-properties fo:text-align="center"/>
      <style:text-properties fo:font-weight="bold" fo:color="{{brand.colors.table.header_text|#111827}}"/>
    </style:style>

    <style:style style:name="Table1.B1" style:family="table-cell">
      <style:table-cell-properties fo:padding="{{spacing.table.cell_padding|0.2cm}}" fo:border="{{borders.table.horizontal|0.05pt solid #E5E7EB}}"
                                  fo:background-color="{{brand.colors.table.body_bg|#FFFFFF}}"/>
      <style:text-properties fo:color="{{brand.colors.table.body_text|#374151}}"/>
    </style:style>
  </office:automatic-styles>

  <!-- Document body -->
  <office:body>
    <office:text>
      <!-- User field declarations for design tokens -->
      <text:user-field-decls>
        <text:user-field-decl office:value-type="string" office:string-value="{{company.name|Your Company}}" text:name="company_name"/>
        <text:user-field-decl office:value-type="string" office:string-value="{{document.title|StyleStack Document}}" text:name="document_title"/>
        <text:user-field-decl office:value-type="string" office:string-value="{{document.version|1.0}}" text:name="document_version"/>
        <text:user-field-decl office:value-type="string" office:string-value="{{brand.colors.primary|#0EA5E9}}" text:name="brand_primary"/>
        <text:user-field-decl office:value-type="string" office:string-value="{{typography.font.family|Inter}}" text:name="brand_font"/>
      </text:user-field-decls>

      <!-- Sequence declarations -->
      <text:sequence-decls>
        <text:sequence-decl text:display-outline-level="0" text:name="Illustration"/>
        <text:sequence-decl text:display-outline-level="0" text:name="Table"/>
        <text:sequence-decl text:display-outline-level="0" text:name="Text"/>
        <text:sequence-decl text:display-outline-level="0" text:name="Drawing"/>
      </text:sequence-decls>

      <!-- Document title -->
      <text:p text:style-name="P1">
        <text:user-field-get text:name="document_title">{{document.title|StyleStack Modern Document}}</text:user-field-get>
      </text:p>

      <!-- Document subtitle -->
      <text:p text:style-name="P2">
        {{document.subtitle|Design System Integration with Corporate Brand Overrides}}
      </text:p>

      <!-- Brand logo frame -->
      <text:p text:style-name="Standard">
        <draw:frame draw:style-name="fr1" draw:name="CompanyLogo" text:anchor-type="paragraph"
                   svg:x="{{layout.logo.x|8cm}}" svg:y="{{layout.logo.y|1cm}}"
                   svg:width="{{layout.logo.width|4cm}}" svg:height="{{layout.logo.height|2cm}}"
                   draw:z-index="0">
          <draw:image xlink:href="Pictures/company_logo.png" xlink:type="simple" xlink:show="embed" xlink:actuate="onLoad"
                     loext:mime-type="image/png">
            <text:p>{{company.logo.alt_text|Company Logo}}</text:p>
          </draw:image>
        </draw:frame>
      </text:p>

      <!-- Introduction section -->
      <text:h text:style-name="Heading_20_1" text:outline-level="1">
        {{sections.introduction.title|Introduction}}
      </text:h>

      <text:p text:style-name="P3">
        {{sections.introduction.content|This document demonstrates the StyleStack Modern design system integration with OpenDocument Format. All design tokens, typography, colors, and spacing follow the hierarchical design system with corporate brand overrides enabled.}}
      </text:p>

      <!-- Design system overview section -->
      <text:h text:style-name="Heading_20_1" text:outline-level="1">
        {{sections.design_system.title|Design System Overview}}
      </text:h>

      <text:p text:style-name="P3">
        The <text:span text:style-name="T1">{{design_system.name|StyleStack Modern}}</text:span> design system provides:
      </text:p>

      <!-- Bulleted list with design system features -->
      <text:list text:style-name="L1">
        <text:list-item>
          <text:p text:style-name="P4">
            <text:span text:style-name="T2">Hierarchical Design Tokens</text:span> - {{features.tokens.description|Corporate brand colors, typography, and spacing with automatic inheritance}}
          </text:p>
        </text:list-item>
        <text:list-item>
          <text:p text:style-name="P4">
            <text:span text:style-name="T2">Typography System</text:span> - {{features.typography.description|Professional Inter font family with responsive scaling}}
          </text:p>
        </text:list-item>
        <text:list-item>
          <text:p text:style-name="P4">
            <text:span text:style-name="T2">Brand Compliance</text:span> - {{features.compliance.description|Automatic corporate override integration with WCAG AAA accessibility}}
          </text:p>
        </text:list-item>
      </text:list>

      <!-- Data table with design token examples -->
      <text:h text:style-name="Heading_20_2" text:outline-level="2">
        {{sections.tokens.title|Design Token Reference}}
      </text:h>

      <table:table table:name="Table1" table:style-name="Table1">
        <table:table-column table:style-name="Table1.A"/>
        <table:table-column table:style-name="Table1.B"/>
        <table:table-column table:style-name="Table1.C"/>

        <!-- Table header -->
        <table:table-row>
          <table:table-cell table:style-name="Table1.A1" office:value-type="string">
            <text:p text:style-name="Table_20_Heading">{{table.headers.token_type|Token Type}}</text:p>
          </table:table-cell>
          <table:table-cell table:style-name="Table1.A1" office:value-type="string">
            <text:p text:style-name="Table_20_Heading">{{table.headers.token_name|Token Name}}</text:p>
          </table:table-cell>
          <table:table-cell table:style-name="Table1.A1" office:value-type="string">
            <text:p text:style-name="Table_20_Heading">{{table.headers.token_value|Current Value}}</text:p>
          </table:table-cell>
        </table:table-row>

        <!-- Color tokens -->
        <table:table-row>
          <table:table-cell table:style-name="Table1.B1" office:value-type="string">
            <text:p text:style-name="Table_20_Contents">{{table.data.colors.type|Colors}}</text:p>
          </table:table-cell>
          <table:table-cell table:style-name="Table1.B1" office:value-type="string">
            <text:p text:style-name="Table_20_Contents">brand.colors.primary</text:p>
          </table:table-cell>
          <table:table-cell table:style-name="Table1.B1" office:value-type="string">
            <text:p text:style-name="Table_20_Contents">
              <text:user-field-get text:name="brand_primary">{{brand.colors.primary|#0EA5E9}}</text:user-field-get>
            </text:p>
          </table:table-cell>
        </table:table-row>

        <!-- Typography tokens -->
        <table:table-row>
          <table:table-cell table:style-name="Table1.B1" office:value-type="string">
            <text:p text:style-name="Table_20_Contents">{{table.data.typography.type|Typography}}</text:p>
          </table:table-cell>
          <table:table-cell table:style-name="Table1.B1" office:value-type="string">
            <text:p text:style-name="Table_20_Contents">typography.font.family</text:p>
          </table:table-cell>
          <table:table-cell table:style-name="Table1.B1" office:value-type="string">
            <text:p text:style-name="Table_20_Contents">
              <text:user-field-get text:name="brand_font">{{typography.font.family|Inter}}</text:user-field-get>
            </text:p>
          </table:table-cell>
        </table:table-row>

        <!-- Spacing tokens -->
        <table:table-row>
          <table:table-cell table:style-name="Table1.B1" office:value-type="string">
            <text:p text:style-name="Table_20_Contents">{{table.data.spacing.type|Spacing}}</text:p>
          </table:table-cell>
          <table:table-cell table:style-name="Table1.B1" office:value-type="string">
            <text:p text:style-name="Table_20_Contents">spacing.paragraph.bottom</text:p>
          </table:table-cell>
          <table:table-cell table:style-name="Table1.B1" office:value-type="string">
            <text:p text:style-name="Table_20_Contents">{{spacing.paragraph.bottom|0.3cm}}</text:p>
          </table:table-cell>
        </table:table-row>
      </table:table>

      <!-- Footer section with corporate information -->
      <text:p text:style-name="Standard"/>
      <text:p text:style-name="Footer">
        <text:user-field-get text:name="company_name">{{company.name|Your Company}}</text:user-field-get>
        - {{document.footer.powered_by|Powered by StyleStack Design System}} v<text:user-field-get text:name="document_version">{{document.version|1.0}}</text:user-field-get>
      </text:p>

    </office:text>
  </office:body>

</office:document-content>