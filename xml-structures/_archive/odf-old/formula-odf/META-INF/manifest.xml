<?xml version="1.0" encoding="UTF-8"?>
<manifest:manifest xmlns:manifest="urn:oasis:names:tc:opendocument:xmlns:manifest:1.0" manifest:version="1.3">
  <!-- OpenDocument Formula Manifest with StyleStack Design System Integration -->

  <!-- Main content files -->
  <manifest:file-entry manifest:full-path="/" manifest:version="1.3" manifest:media-type="application/vnd.oasis.opendocument.formula"/>
  <manifest:file-entry manifest:full-path="content.xml" manifest:media-type="text/xml"/>
  <manifest:file-entry manifest:full-path="styles.xml" manifest:media-type="text/xml"/>
  <manifest:file-entry manifest:full-path="meta.xml" manifest:media-type="text/xml"/>
  <manifest:file-entry manifest:full-path="settings.xml" manifest:media-type="text/xml"/>

  <!-- Manifest itself -->
  <manifest:file-entry manifest:full-path="META-INF/" manifest:media-type="application/vnd.sun.xml.ui.configuration"/>
  <manifest:file-entry manifest:full-path="META-INF/manifest.xml" manifest:media-type="text/xml"/>

  <!-- StyleStack mathematical notation assets -->
  <manifest:file-entry manifest:full-path="Pictures/" manifest:media-type=""/>
  <manifest:file-entry manifest:full-path="Pictures/stylestack_logo.svg" manifest:media-type="image/svg+xml"/>
  <manifest:file-entry manifest:full-path="Pictures/math_symbols.svg" manifest:media-type="image/svg+xml"/>
  <manifest:file-entry manifest:full-path="Pictures/equation_templates.svg" manifest:media-type="image/svg+xml"/>
  <manifest:file-entry manifest:full-path="Pictures/scientific_notation.png" manifest:media-type="image/png"/>

  <!-- Mathematical fonts and symbols -->
  <manifest:file-entry manifest:full-path="Fonts/" manifest:media-type=""/>
  <manifest:file-entry manifest:full-path="Fonts/math-symbols.ttf" manifest:media-type="application/font-sfnt"/>
  <manifest:file-entry manifest:full-path="Fonts/inter-math.woff2" manifest:media-type="font/woff2"/>

  <!-- Formula templates and libraries -->
  <manifest:file-entry manifest:full-path="Templates/" manifest:media-type=""/>
  <manifest:file-entry manifest:full-path="Templates/algebra.xml" manifest:media-type="text/xml"/>
  <manifest:file-entry manifest:full-path="Templates/calculus.xml" manifest:media-type="text/xml"/>
  <manifest:file-entry manifest:full-path="Templates/statistics.xml" manifest:media-type="text/xml"/>
  <manifest:file-entry manifest:full-path="Templates/geometry.xml" manifest:media-type="text/xml"/>

  <!-- Thumbnail -->
  <manifest:file-entry manifest:full-path="Thumbnails/" manifest:media-type=""/>
  <manifest:file-entry manifest:full-path="Thumbnails/thumbnail.png" manifest:media-type="image/png"/>

  <!-- Configuration files for math editor UI -->
  <manifest:file-entry manifest:full-path="Configurations2/" manifest:media-type="application/vnd.sun.xml.ui.configuration"/>
  <manifest:file-entry manifest:full-path="Configurations2/accelerator/" manifest:media-type="application/vnd.sun.xml.ui.configuration"/>
  <manifest:file-entry manifest:full-path="Configurations2/accelerator/current.xml" manifest:media-type="text/xml"/>
  <manifest:file-entry manifest:full-path="Configurations2/floater/" manifest:media-type="application/vnd.sun.xml.ui.configuration"/>
  <manifest:file-entry manifest:full-path="Configurations2/images/" manifest:media-type="application/vnd.sun.xml.ui.configuration"/>
  <manifest:file-entry manifest:full-path="Configurations2/images/Bitmaps/" manifest:media-type="application/vnd.sun.xml.ui.configuration"/>
  <manifest:file-entry manifest:full-path="Configurations2/menubar/" manifest:media-type="application/vnd.sun.xml.ui.configuration"/>
  <manifest:file-entry manifest:full-path="Configurations2/menubar/current.xml" manifest:media-type="text/xml"/>
  <manifest:file-entry manifest:full-path="Configurations2/popupmenu/" manifest:media-type="application/vnd.sun.xml.ui.configuration"/>
  <manifest:file-entry manifest:full-path="Configurations2/statusbar/" manifest:media-type="application/vnd.sun.xml.ui.configuration"/>
  <manifest:file-entry manifest:full-path="Configurations2/statusbar/current.xml" manifest:media-type="text/xml"/>
  <manifest:file-entry manifest:full-path="Configurations2/toolbar/" manifest:media-type="application/vnd.sun.xml.ui.configuration"/>
  <manifest:file-entry manifest:full-path="Configurations2/toolbar/current.xml" manifest:media-type="text/xml"/>

  <!-- Mathematical notation libraries -->
  <manifest:file-entry manifest:full-path="Math-Libraries/" manifest:media-type=""/>
  <manifest:file-entry manifest:full-path="Math-Libraries/operators.xml" manifest:media-type="text/xml"/>
  <manifest:file-entry manifest:full-path="Math-Libraries/functions.xml" manifest:media-type="text/xml"/>
  <manifest:file-entry manifest:full-path="Math-Libraries/constants.xml" manifest:media-type="text/xml"/>
  <manifest:file-entry manifest:full-path="Math-Libraries/symbols.xml" manifest:media-type="text/xml"/>

  <!-- External mathematical resources -->
  <manifest:file-entry manifest:full-path="External-Data/" manifest:media-type=""/>
  <manifest:file-entry manifest:full-path="External-Data/mathml-specs.xml" manifest:media-type="text/xml"/>
  <manifest:file-entry manifest:full-path="External-Data/latex-conversion.json" manifest:media-type="application/json"/>
  <manifest:file-entry manifest:full-path="External-Data/unicode-math.xml" manifest:media-type="text/xml"/>

  <!-- Encryption information (if applicable) -->
  <manifest:encryption-data manifest:checksum-type="SHA256">
    <manifest:algorithm manifest:algorithm-name="http://www.w3.org/2001/04/xmlenc#aes256-cbc" manifest:initialisation-vector="{{security.encryption.iv|base64_encoded_iv}}"/>
    <manifest:key-derivation manifest:key-derivation-name="PBKDF2" manifest:salt="{{security.encryption.salt|base64_encoded_salt}}" manifest:iteration-count="{{security.encryption.iterations|100000}}"/>
  </manifest:encryption-data>

</manifest:manifest>