{
  "$schema": "https://stylestack.dev/schemas/channel-config.schema.json",
  "metadata": {
    "channel": "doc",
    "description": "Document-focused template optimizations",
    "version": "1.0.0"
  },
  "targets": [
    {
      "file": "word/styles.xml",
      "ns": {
        "w": "http://schemas.openxmlformats.org/wordprocessingml/2006/main"
      },
      "ops": [
        {
          "set": {
            "xpath": "//w:docDefaults/w:pPrDefault/w:pPr/w:spacing/@lineRule",
            "value": "auto"
          }
        },
        {
          "set": {
            "xpath": "//w:docDefaults/w:pPrDefault/w:pPr/w:spacing/@line",
            "value": "276"
          }
        }
      ]
    },
    {
      "file": "ppt/presentation.xml",
      "ns": {
        "p": "http://schemas.openxmlformats.org/presentationml/2006/main"
      },
      "ops": [
        {
          "set": {
            "xpath": "//p:presentation/@showSpecialPlsOnTitleSld",
            "value": "1"
          }
        },
        {
          "set": {
            "xpath": "//p:presentation/@rtl",
            "value": "0"
          }
        }
      ]
    },
    {
      "file": "ppt/slideMasters/slideMaster1.xml",
      "ns": {
        "p": "http://schemas.openxmlformats.org/presentationml/2006/main",
        "a": "http://schemas.openxmlformats.org/drawingml/2006/main"
      },
      "ops": [
        {
          "insert": {
            "xpath": "//p:cSld/p:spTree",
            "position": "last",
            "xml": "<p:sp>\n  <p:nvSpPr>\n    <p:cNvPr id=\"98\" name=\"Slide Number Placeholder\"/>\n    <p:cNvSpPr><p:ph type=\"sldNum\" idx=\"1\"/></p:cNvSpPr>\n    <p:nvPr/>\n  </p:nvSpPr>\n  <p:spPr>\n    <a:xfrm>\n      <a:off x=\"8229600\" y=\"6400000\"/>\n      <a:ext cx=\"1143000\" cy=\"200000\"/>\n    </a:xfrm>\n  </p:spPr>\n  <p:txBody>\n    <a:bodyPr/>\n    <a:lstStyle/>\n    <a:p><a:fld id=\"{10647117-B8A6-48A0-8770-7F53CB06DE9D}\" type=\"slidenum\"><a:t>#</a:t></a:fld></a:p>\n  </p:txBody>\n</p:sp>"
          }
        }
      ]
    }
  ]
}